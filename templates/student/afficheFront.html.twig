{% block custom %}
     {% include "conversation.html.twig" %}
    <table class="table table-bordered">
        <thread>
            <tr>
                <th scope="col">Prenom</th>
                <th scope="col">Nom</th>
                <th scope="col">Adresse</th>
                <th>Classe</th>

            </tr>
        </thread>
        <tbody>
        <tr {% for e in etudiant %}>
            {% if e.classe == app.user.classe %}
                <td>{{ e.username }}</td>
                <td>{{ e.prenom }}</td>
                <td>{{ e.email }}</td>
                <td>{{ e.classe.classe }}</td>
            {% endif %}
        </tr{% endfor %}>
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(etudiant) }}
    </div>
