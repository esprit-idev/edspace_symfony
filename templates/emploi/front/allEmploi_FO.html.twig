         <style>
    .paragraph{
    color: #717275;
    font-size: 20px;
    font-weight: var(--font-weight-light);
    letter-spacing: 20px;
    }
    </style>
{% endblock css %}

{% block offres_item %}
    <li class="nav-item active">
        <a class="nav-link" href="{{ path('allemploi') }}">Offres d'emploi</a>
    </li>
{% endblock %}

{% block slider %}

    <section class=" slider_section position-relative">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="detail-box">
                                    <div>
                                        <h1>
                                            Les Offres D'Emploi
                                        </h1>
                                        <br>Cet espace est dédié au partage des ressources qui peuvent être utiles pour les étudiants des différents niveaux d'études de l'université.</br> Il offre la possibilté de partage et de téléchargement.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}

{% block custom %}
{% if is_granted('ROLE_STUDENT') %}
{% include "conversation.html.twig" %}
{% endif %}
    <section class="section-padding" id="portfolio">
        <div class="container">
            <div class="col-12">
                <h2 class="mb-5 text-center" data-aos="fade-up">Les Offres D'Emploi</h2>
            </div>
             <div class="col-12 d-flex justify-content-center mb-5">
                <form method="POST" action="{{ path('searchByEmploi') }}" class="form-row">
                    <div class="pr-2">
                        <select name="categoryKey" id="categoryKey" class="form-select form-control">
                            <option disabled selected> Sélectionnez une catégorie</option>
                                {% for c in categories %}
                                <option>{{ c.categoryName }}</option>
                                {% endfor %}
                        </select>
                    </div>
                    <div><button value="recherche" class="btn pl-4 pr-4"  style="background-color:#133e3f; color: #ffffff;">Rechercher</button></div>
                </form>
            </div>
            <div class="row row-cols-1 row-cols-md-2 g-4  d-flex justify-content-center"> 
                    {% for emploi in emplois %}   
                <div class="col-lg-4 col-8 mb-4">      
                    <div class="card h-100" data-aos="fade-up">
                        <a href="{{ path('oneEmploi', {'id': emploi.id, 'emploiTitle' : emploi.title}) }}" class="image-popup">
                        <img src="{{ asset('images/') ~ emploi.image.name}}" class="card-img-top " alt="">
                        </a>
                        <div class="card-body">                     
                            <h4 class="card-title" style="font-size:24px;text-transform:capitalize">{{emploi.title}}</h4>
                            <p class="fate"  >{{emploi.content}}</p>
                        </div>
                        <div class='card-footer text-center' style="background-color:#fff">
                        <p class="btn btn-warning pl-4 pr-4 btn-sm">{{emploi.date.format('d/m/y')}}</p>
                        <p class="btn btn-warning pl-4 pr-4 btn-sm">{{emploi.categoryName}}</p>
                        </div>
                    </div>
                </div>
                    {% endfor %}  
        </div>
    </section>
{% endblock %}

