{% block cards %}
    <div class="content-wrapper">
        <div class="container-fluid">

            <body>
            <label class="btn btn-outline-info" style="margin-left : 910px">
                <a href="{{ path('ajoutA') }}"> Ajouter un agent</a>
            </label>
            <table class="table table-striped">
                <tr>
                    <th>ID</th>
                    <th>Prenom</th>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Role</th>
                        <th>Update</th>
                        <th>Delete</th>
                </tr>
                <tr {% for a in admin%}>
                    <td>{{ a.id }}</td>
                    <td>{{ a.username }}</td>
                    <td>{{ a.prenom }}</td>
                    <td>{{ a.email }}</td>
                    <td>{% for role in a.roles %}
                            {{ role }}
                        {% endfor %}</td>

                    <td><a href="{{ path('updateA',{'id':a.id}) }}" class="btn btn-outline-info"><i class="fas fa-pen"></i></a></td>
                    <td><a  class="btn btn-danger px-3" href="{{ path('deleteA',{'id':a.id}) }}"><i class="fa fa-trash" class="fas fa-bolt" aria-hidden="true"></i></a></td>


                </tr{% endfor %}>
            </table>



            </body>
        </div>
    </div>
{% endblock %}