{% extends "backOffice.html.twig" %}
{% block leftNavBar %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="index3.html" class="nav-link">Liste des etudiants</a>
        </li>
    </ul>
{% endblock%}
{% block cards %}
    <div class="content-wrapper">
        <div class="container-fluid">

            <body>

            <table class="table table-striped">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Adresse</th>
                    <th>Role</th>
                    {% if is_granted('ROLE_ADMIN') %}
                    <th>Update</th>
                    <th>Delete</th>
                    {% endif %}
                </tr>
                <tr {% for a in admin%}>
                    <td>{{ a.id }}</td>
                    <td>{{ a.username }}</td>
                    <td>{{ a.prenom }}</td>
                    <td>{{ a.email }}</td>
                    <td>{% for role in a.roles %}
                            {{ role }}
                        {% endfor %}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                    <td><a href="{{ path('updateA',{'id':a.id}) }}">Update</a></td>
                    <td><a href="{{ path('deleteA',{'id':a.id}) }}">Delete</a></td>
                    {% endif %}

                </tr{% endfor %}>
            </table>
            {% if is_granted('ROLE_ADMIN') %}
            <label class="btn btn-secondary active">
                <a href="{{ path('ajoutA') }}"> Ajouter un Admin</a>
            </label>
            {% endif %}
            </body>
        </div>
    </div>
{% endblock %}