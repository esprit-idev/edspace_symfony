{% block slider %}

    <section class=" slider_section position-relative">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="detail-box">
                                    <div>
                                        <h1>
                                           Mon Profil
                                        </h1>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
{% block custom %}
    {% include "conversation.html.twig" %}
<div class="container">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src={{ asset('uploads/' ~ app.user.image) }} alt="Admin" class="rounded-circle p-1" width="110">
                            <div class="mt-3">
                                <p class="text-muted font-size-sm"><b>{{ app.user.username }} {{ app.user.prenom }}</b></p>
                                <p class="text-secondary mb-1"></p>
                                <p class="text-muted font-size-sm">{{ app.user.email }}</p>
                                <a class="btn btn-primary" href="{{ path('photo') }}">edit photo</a>
                                {# <button class="btn btn-outline-primary">Message</button> #}
                            </div>
                        </div>
                        <hr class="my-4">


                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-5">
                            <div class="col-sm-5">
                                <h5 class="text-muted font-size-sm">Nom et prenom</h5>
                            </div>
                            <div class="mt-3">
                                <p class="text-muted font-size-sm"><b>{{ app.user.username }} {{ app.user.prenom }}</b></p>
                            </div>
                        </div>
                        <div class="row mb-5">
                        <div class="col-sm-5">
                            <h5 class="text-muted font-size-sm">Email</h5>
                        </div>
                        <div class="row mb-3">

                            <p class="text-muted font-size-sm">{{ app.user.email }}</p>
                        </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-9 text-secondary">
                                <a href="{{ path('ProfilEdit') }}" type="button" class="btn btn-primary px-4" > Modifier le Profil</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
